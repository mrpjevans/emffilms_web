title: None
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Film programme for Electromagentic File 2024">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous">

    <link href="/src/css/emffilms.css" rel="stylesheet" />

    <link
      rel="icon"
      type="image/jpeg"
      href="/favicon.jpg">

    <link
      rel="alternate"
      type="application/rss+xml"
      title="EMF Films RSS Feed"
      href="https://emffilms.org/feed/feed.xml" />

    <title>EMF Films | {{ title }}</title>
  </head>
  <body data-bs-theme="dark">

    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-12">

          <header>
            <nav class="navbar navbar-expand-lg border-bottom border-body">
              <div class="container-fluid">
                <a
                  class="navbar-brand logo"
                  href="/"
                  id="logo">Electromagnetic FILM 2024</a>

                <div>
                  <div>

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                        <a class="nav-link {% if page.fileSlug == 'about' %}active{% endif %}" href="/about">About</a>
                      </li>
                    </ul>

                  </div>
                </div>
              </div>
            </nav>
          </header>

        </div>

        <main>
          {{ content }}
        </main>


        <div class="row justify-content-md-center p-0">

          <footer class="col-12 mb-5">

            <hr>

            {% if title != 'Home' %}
              <a href="/">Home</a>
            {% endif %}

            <div class="float-end">
              <a
                id="rss-icon"
                href="/feed/feed.xml"
                aria-label="RSS Feed">
                {% include 'icons/rss' %}
              </a>
            </div>

          </footer>

        </div>

      </div>

    </div>

    <script>
      			function changeIt() {

      				const delay = Math.floor(Math.random() * 10) * 2000;
      				setTimeout(() => {
      					document.getElementById('logo').innerText = "HACK THE PLANET"			
      								setTimeout(() => {
      									document.getElementById('logo').innerText = "Electromagnetic FILM 2024"
      												changeIt()
      								}, 150)
      				}, delay)
      							
      			}
      				// changeIt()
    </script>

  </body>
</html>